  color: #6dabe4;
}

.form-submit {
  padding: 15px;
  background: #6dabe4;
  color: #fff;
  font-size: 18px;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  width: 100%;
  transition: background-color 0.3s ease, transform 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
}

.form-submit:hover {
  background: #4292dc;
  transform: translateY(-2px);
}

