}

.form-group label {
  color: #999;
  position: absolute;
  left: 15px;
  z-index: 2;
  font-size: 18px;
}

.form-group input {
  width: 100%;
  padding: 15px 15px 15px 45px;
  border-radius: 25px;
  border: 1px solid #ccc;
  background: #f5f5f5;
  font-size: 16px;
  outline: none;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-group input:focus {
  border-color: #6dabe4;
  box-shadow: 0 0 8px rgba(109, 171, 228, 0.5);
}

.form-group label i {
