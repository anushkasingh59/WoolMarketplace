<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wool MarketPlace</title>
    <script src="https://kit.fontawesome.com/9c45bd1b05.js" crossorigin="anonymous"></script>  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"/>
    <style>
        @import url('https://fonts.googleapis.com/css?family=Roboto:400,500,300,700');

        

        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(50deg, #f9f9f9 40%, #e4e9fd 60%);
            color: #333;
        }
        .navbar-mainbg {
            background-color: #4b3f72;
            position: relative;
            z-index: 10;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .navbar-logo img {
            height: 40px;
            vertical-align: middle;
        }
        .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.8);
            transition: color 0.3s, background-color 0.3s, box-shadow 0.3s;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 30px;
        }
        .navbar-nav .nav-link:hover {
            color: #4b3f72;
            background-color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .navbar-nav .nav-item.active .nav-link {
            color: #fff;
            background-color: #6f5a9b;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .hero-section {
            text-align: center;
            padding: 50px 15px;
            background: #e4e9fd;
            border-bottom: 2px solid #4b3f72;
        }

        .hero-section h1 {
            font-size: 3rem;
            color: #4b3f72;
        }

        .hero-section p {
            font-size: 1.25rem;
            color: #555;
        }

        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 40px 15px;
        }

        .card {
            width: calc(33.333% - 20px);
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            overflow: hidden;
        }

        .card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .card-content {
            padding: 15px;
            text-align: center;
        }

        .card-content p {
            margin: 5px 0;
            color: #333;
            font-weight: 500;
        }

        .card-content button {
            min-height: 40px;
            width: 100px;
            border-radius: 20px;
            border: none;
            background-color: #4b3f72;
            color: #fff;
            font-size: 16px;
            font-weight: 500;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .card-content button:hover {
            background-color: #6f5a9b;
        }

        footer {
            color: rgba(0, 0, 0, 0.5);
            text-align: center;
            margin: 50px 0;
        }

        @media (max-width: 768px) {
            .card {
                width: calc(50% - 20px);
            }
        }

        @media (max-width: 480px) {
            .card {
                width: calc(100% - 20px);
            }
        }
    </style>
</head>
<body>

    <!-- Navigation Bar Start -->
    <nav class="navbar navbar-expand-lg navbar-mainbg">
      <a class="navbar-brand navbar-logo" href="/home">
        Wool Market
        <img src="https://media.tenor.com/jFoLqyTPFeMAAAAi/neko-cute.gif" alt="Logo" />
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item ">
            <a class="nav-link" href="/home"><i class="fas fa-home"></i> Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="seller"><i class="fas fa-money-bill-wave"></i> Wool Seller</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="marketplace"><i class="fas fa-box"></i> Wool MarketPlace</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="newsAndTrends"><i class="far fa-calendar-alt"></i> News & Trends</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="tracking"><i class="far fa-chart-bar"></i> Tracking</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="processIntro"><i class="fas fa-chalkboard-teacher"></i> Education & Training</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/discord"><i class="fas fa-users"></i> Community</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- Navigation Bar End -->

    <!-- Hero Section Start -->
    <section class="hero-section">
        <h1>Market Place</h1>
        <p>Explore the finest selection of wool items, directly from our trusted sellers.</p>
    </section>
    <!-- Hero Section End -->

    <!-- Cards Section Start -->
    <div class="cards-container">
        <% newListItems.forEach(user => { %>
            <div class="card">
                <img src="https://images-na.ssl-images-amazon.com/images/I/91n8ouFHSyL.jpg" alt="Wool Image">
                <div class="card-content">
                    <p>Wool Quality: <%= user.woolType %></p>
                    <p>Wool Colour: <%= user.woolColor %></p>
                    <p>Quantity: <%= user.woolQuantity %></p>
                    <p>Price: <%= user.price %></p>
                    <p>Seller State: <%= user.state %></p>
                    <p>Product Id: <%= user._id %></p>
                    <form action="/buyer" method="post">
                        <button type="submit">Buy Now</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
    <!-- Cards Section End -->

    <footer>
        Â© 2024 Wool Market. All Rights Reserved.
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>