            <h2 class="form-title">Sign Up</h2>
            <form method="post" action="/registered" class="register-form" id="register-form">
                <div class="form-group">
                    <label for="name"><i class="fas fa-user"></i></label>
                    <input type="text" name="name" id="name" placeholder="Your Name" required aria-label="Your Name"/>
                </div>
                <div class="form-group">
                    <label for="phone"><i class="fas fa-phone"></i></label>
                    <input type="tel" name="phone" id="phone" placeholder="Your Phone number here" required aria-label="Your Phone Number"/>
                </div>
                <div class="form-group">
                    <label for="email"><i class="fas fa-envelope"></i></label>
                    <input type="email" name="email" id="email" placeholder="Your Email here" required aria-label="Your Email"/>
                </div>
                <div class="form-group">
                    <label for="password"><i class="fas fa-lock"></i></label>
                    <input type="password" name="password" id="password" placeholder="Enter your password here" required aria-label="Your Password"/>
                </div> 
                
                <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Submit"/>
                </div>
                
            </form>
            <div class="login-link-div">
              <a href="/login" class="signup-image-link">I am already a member</a>
            </div>
            

        </div>
        <div class="signup-image">
