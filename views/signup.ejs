}

.signup {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: 100vh;
}

.container {
    max-width: 1000px;
    width: 100%;
    background: #fff;
    padding: 25px 30px;
    border-radius: 8px;
    box-shadow: 0px 15px 25px rgba(0, 0, 0, 0.1);
}

.signup-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    background-color: #e4e9fd;
    background-image: url("https://thumbs.dreamstime.com/b/man-farmer-character-shearing-domestic-sheep-removing-wool-doing-agricultural-work-vector-illustration-young-male-engaged-257154903.jpg");
    background-repeat: no-repeat;
    background-size: cover;
}

.signup-form {
    flex: 1;
    padding: 20px;
}

.signup-image {
    flex: 1;
    text-align: center;
    opacity: 0;
}

.signup-image figure img {
    width: 80%;
    border-radius: 8px;
}

.form-title {
    margin-bottom: 15px;
    font-size: 24px;
    font-weight: 600;
    color: #333;
    text-align: center;
}

.form-group {
    position: relative;
    margin-bottom: 20px;
}

.form-group input {
    width: 100%;
    padding: 10px 15px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 25px;
    outline: none;
    transition: all 0.3s ease;
    padding-left: 45px; /* Adjust padding for icons */
}

.form-group input:focus {
    border-color: #6dabe4;
    box-shadow: 0 0 5px rgba(109, 171, 228, 0.5);
}

.form-group label {
    position: absolute;
    top: 50%;
    left: 15px;
    transform: translateY(-50%);
    color: #999;
    font-size: 18px;
}

.form-group label i {
    transition: all 0.3s ease;
}

.form-group input:focus + label i {
    color: #6dabe4;
}

.form-submit {
    width: 100%;
    padding: 10px 0;
    background: #6dabe4;
    border: none;
    border-radius: 25px;
    font-size: 16px;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
}

.form-submit:hover {
    background: #4292dc;
}

.signup-image-link {
    margin-top: 15px;
    display: inline-block;
    font-size: 14px;
    color: hsl(209, 76%, 11%);
    text-decoration: none;
    transition: color 0.3s ease;
    
}

.signup-image-link:hover {
    color: hsl(209, 76%, 6%);;
}

.term-service {
    color: #6dabe4;
    text-decoration: none;
    transition: color 0.3s ease;
}

.term-service:hover {
    color: #4292dc;
}
.login-link-div{
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

